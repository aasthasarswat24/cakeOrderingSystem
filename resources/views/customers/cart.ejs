<section class="cart">
    <% if (session.cart){ %>
        <div class="order container mx-auto w-1/2 py-10" >
            <div class="flex items-center border-b border-grey-300">
                <img width="40px" src="/images/cart2.png" alt="cart1">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="burger-list mt-8">
                <% for(let brownie of Object.values(session.cart.items)){  %>
                <div class="flex items-center my-8">
                    <img class="w-32" src="<%= brownie.items.image %>" alt="cart-list">
                    <div class=" flex-1 ml-4">
                        <h1><%= brownie.items.name %></h1>
                        <span>MEDIUM</span>
                    </div class="">
                    <span class="flex-1"><%= brownie.qty %></span>
                    <span class="font-bold text-lg">â‚¹ <%= brownie.items.price * brownie.qty %></span>
                </div>
                <% } %>
    
            </div>
            <hr>
            
    
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount ml-2 text-2xl font-bold">â‚¹ <%= session.cart.totalPrice %></span>
                </div>
                <div>
                    <form action="">
                        <input class="border border-grey-400 p-2 w-1/2 mt-4" type="text" placeholder="Phone number">
                        <input class="border border-grey-400 p-2 w-1/2 mt-4" type="text" placeholder="Adress">
                        <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4" type="submit">Order Now</button>
                        </div>
                    </form>
                </div>
               <!--  <a href="#" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-4 ">Login to continue</a> -->
            </div>
        </div>

        <% } else{ %>
    <div class="empty-cart">
        <div class="container mx-auto text-center pb-2">
            <div class="py-6">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
            <p>You probably haven't ordered anything yet.
                To order, go to main page.
            </p>
            </div>
            <img class="w-1/4 py-8 mx-auto" src="/images/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div> 
    <% } %>


</section>